@model eShop.UI.ViewModels.LoginDetailsVM
@{
    ViewData["Title"] = "Admin Login";
    Layout = "../Shared/_LayoutAdmin";
}
<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        @if (ViewBag.Error != null)
        {
            <span>@ViewBag.Error</span>
        }
        @using (Html.BeginForm("UserLogin", "DashboardAdmin",FormMethod.Post))
        { 
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IsHuman">I'm not a robot</label>
                <input asp-for="IsHuman" type="checkbox" id="robot" onclick="enableSubmit()" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" disabled />
            </div>
        }
    </div>
</div>
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js"></script>
}

