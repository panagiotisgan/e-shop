@model eShop.UI.ViewModels.ProductVM
@{
    ViewData["Title"] = "Products";
    Layout = "../Shared/_LayoutAdmin";
    var errorMessage = TempData["ErrorMessage"];
}
<div>
    <button id="modalBtn" type="button" data-toggle="modal" data-target="#productModal">Add Product</button>
</div>

<div class="container">
    @if (!String.IsNullOrEmpty(errorMessage as String))
    {
        <div>
            <p style="color:red;">@Convert.ToString(errorMessage)</p>
        </div>
    }
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Quantity</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- The Modal -->
<div class="modal" id="productModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">New Product</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form asp-action="Post" asp-controller="Product" method="post" enctype="multipart/form-data">
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Όνομα:</label>
                        <input type="text" class="form-control" id="productName" name="Name">
                    </div>
                    <div class="form-group">
                        <label for="code">Κωδικός:</label>
                        <input type="text" class="form-control" id="code" name="Code">
                    </div>
                    <div class="form-group">
                        <label for="stockQty">Απόθεμα:</label>
                        <input type="text" class="form-control" id="stockQty" name="StockQty">
                    </div>
                    <div class="form-group">
                        <label for="price">Τιμή:</label>
                        <input type="text" class="form-control" id="price" name="Price" />
                    </div>
                    <div class="form-group">
                        <label for="category">Κατηγορία:</label>
                        <!-- dropdownListFor για να εμφανίσω όλες τις κατηγορίες θα βάλω εδώ-->
                        @Html.DropDownList("CategoryId", Model.Categories, "-", new { Class = "form-control", Id = "CategoryId" })
                    </div>
                    <div class="form-group">
                        <div class="custom-file">
                            <input asp-for="Images" class="form-control custom-file-input" name="Images" multiple />
                            <label class="custom-file-label">Image Upload</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                        <div class="col-2">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </form>

            <!-- Modal footer -->
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>*@

        </div>
    </div>
</div>

