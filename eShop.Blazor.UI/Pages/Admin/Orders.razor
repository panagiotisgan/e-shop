<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Pr. Code</th>
            <th>Quantity</th>
            <th>Unit Price</th>
        </tr>
    </thead>
    <tbody>
        @if (Orders is not null && Orders.Count() > 0)
        {
            foreach (var order in Orders)
            {
                <tr>
                    <td>@order.Product.Name</td>
                    <td>@order.Product.Code</td>
                    <td>@order.Quantity</td>
                    <td>@order.Product.Price</td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="row">
    <div class="col">
        <PaginationComponent Metadata="PaginationResult" Spread="2" SelectedPage="SelectedPage" />
    </div>
</div>



