@inherits ConfirmationModalBase

@if(ShowModal)
{
    <div class="modal show d-block fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                </div>
                <div class="modal-body">
                    Are you sure want to delete?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" @onclick="OnClick_Hide">Cancel</button>
                    <button type="button" class="btn btn-danger">Ok</button>
                </div>
            </div>
        </div>
    </div>
}
@code {

    private void OnClick_Hide()
    {
        this.Hide();
    }
}
